{% extends 'base.html.twig' %}

{% block title %}{{ category.name }}{% endblock %}

{% block body %}
<style>
    body {
        background: linear-gradient(145deg, #1e1e2f, #3a3a5d);
        font-family: 'Segoe UI', sans-serif;
        color: #fff;
        margin: 0;
        padding-bottom: 4rem;
    }

    .event-header {
        text-align: center;
        margin: 2rem 0 1rem;
        font-size: 2.4rem;
        font-weight: bold;
        color: #fff;
    }

    .event-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(260px, 1fr));
        gap: 1.5rem;
        padding: 0 1.5rem;
    }

    .event-card {
        background: rgba(255, 255, 255, 0.05);
        border: 1px solid rgba(255, 255, 255, 0.1);
        border-radius: 16px;
        overflow: hidden;
        text-decoration: none;
        color: #fff;
        box-shadow: 0 4px 16px rgba(0, 0, 0, 0.2);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        display: flex;
        flex-direction: column;
        backdrop-filter: blur(14px);
    }

    .event-card:hover {
        transform: translateY(-6px);
        box-shadow: 0 10px 22px rgba(0, 0, 0, 0.3);
    }

    .event-image {
        width: 100%;
        height: 180px;
        object-fit: cover;
        border-bottom: 1px solid rgba(255,255,255,0.05);
        display: block; /* üëç meilleure compatibilit√© */
    }

    .event-card-content {
        padding: 1rem;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        flex: 1; /* ‚úÖ cl√© pour pousser le contenu et homog√©n√©iser */
    }

    .event-title {
        font-size: 1.2rem;
        font-weight: bold;
        margin-bottom: 0.4rem;
        color: #fff;
    }

    .event-date {
        font-size: 0.95rem;
        color: #bbb;
        margin-top: auto; /* ‚úÖ pousse la date en bas pour un look clean */
    }

    .no-events {
        text-align: center;
        font-style: italic;
        color: #ccc;
        margin-top: 2rem;
    }

    .back-button {
        display: inline-block;
        margin: 1rem 1.5rem;
        padding: 0.5rem 1rem;
        background-color: #2c3e50;
        color: #eee;
        text-decoration: none;
        border-radius: 8px;
        font-weight: bold;
        transition: background 0.3s;
    }

    .back-button:hover {
        background-color: #34495e;
    }


    .bottom-nav {
        position: fixed;
        bottom: 0;
        width: 100%;
        background-color: #111;
        border-top: 1px solid #333;
        display: flex;
        justify-content: space-around;
        padding: 0.6rem 0;
        font-size: 0.9rem;
        z-index: 999;
    }

    .bottom-nav a {
        text-align: center;
        color: #aaa;
        text-decoration: none;
    }

    .bottom-nav a.active {
        color: #fff;
        font-weight: bold;
    }
</style>

<h1 class="event-header">{{ category.name }}</h1>

<a href="{{ path('app_categories') }}" class="back-button">‚Üê Retour</a>

{% if events is empty %}
    <p class="no-events">Aucun √©v√©nement pour cette cat√©gorie pour le moment.</p>
{% else %}
    <div class="event-grid">
        {% for event in events %}
            <a href="{{ path('event_show', { slug: event.slug }) }}" class="event-card">
                {% if event.image %}
                    <img src="{{ asset('uploads/' ~ event.image) }}" alt="{{ event.title }}" class="event-image">
                {% endif %}
                <div class="event-card-content">
                    <div class="event-title">{{ event.title }}</div>
                    <div class="event-date">{{ event.date|date('d F Y') }}</div>
                </div>
            </a>
        {% endfor %}
    </div>
{% endif %}

<footer class="bottom-nav">
    <a href="{{ path('app_profile') }}" class="{% if app.request.attributes.get('_route') == 'app_profile' %}active{% endif %}">
        üë§<br>Profil
    </a>
    <a href="{{ path('app_categories') }}" class="{% if app.request.attributes.get('_route') == 'app_categories' %}active{% endif %}">
        üîç<br>Explorer
    </a>
{% if is_granted('ROLE_ADMIN') %}
    <a href="{{ path('admin') }}" class="{% if app.request.attributes.get('_route') == 'admin' %}active{% endif %}">
        üî®<br>Admin
    </a>
{% endif %}
</footer>
{% endblock %}
