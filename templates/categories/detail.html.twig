{% extends 'base.html.twig' %}

{% block title %}{{ category.name }}{% endblock %}

{% block body %}
<style>
    .event-header {
        text-align: center;
        margin: 2rem 0;
        font-size: 2rem;
        color: #2c3e50;
    }

    .event-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 1rem;
        padding: 1rem;
    }

    .event-card {
        background: white;
        padding: 1rem;
        border-radius: 1rem;
        text-align: center;
        font-weight: bold;
        text-decoration: none;
        color: #2c3e50;
        box-shadow: 0 4px 10px rgba(0,0,0,0.05);
        transition: transform 0.2s ease;
    }

    .event-card:hover {
        transform: scale(1.03);
        box-shadow: 0 6px 20px rgba(0,0,0,0.1);
    }

    .event-title {
        font-size: 1.2rem;
        font-weight: bold;
        margin-bottom: 0.5rem;
        color: #34495e;
    }

    .no-events {
        text-align: center;
        font-style: italic;
        color: #888;
        margin-top: 2rem;
    }

    .bottom-nav {
            position: fixed;
            bottom: 0;
            width: 100%;
            background-color: #fff;
            border-top: 1px solid #ccc;
            display: flex;
            justify-content: space-around;
            padding: 0.5rem 0;
            font-size: 0.9rem;
            z-index: 999;
        }

        .bottom-nav a {
            text-align: center;
            color: #666;
            text-decoration: none;
        }

        .bottom-nav a.active {
            color: #000;
            font-weight: bold;
        }

        .back-button {
            display: inline-block;
            margin: 1rem;
            padding: 0.4rem 1rem;
            background-color: #ddd;
            color: #333;
            text-decoration: none;
            border-radius: 8px;
            font-weight: bold;
        }

</style>

<h1 class="event-header">√âv√©nements : {{ category.name }}</h1>

<a href="{{ path('app_categories') }}" class="back-button">‚Üê Retour aux cat√©gories</a>


{% if events is empty %}
    <p class="no-events">Aucun √©v√©nement pour cette cat√©gorie pour le moment.</p>
{% else %}
    <div class="event-grid">
        {% for event in events %}
            <a href="{{ path('event_show', { slug: event.slug }) }}" class="event-card">
                <strong>{{ event.title }}</strong>
            </a>
        {% endfor %}
    </div>
{% endif %}
<footer class="bottom-nav">
    <a href="{{ path('app_profile') }}" class="{% if app.request.attributes.get('_route') == 'app_profile' %}active{% endif %}">
        üë§<br>Profil
    </a>
    <a href="{{ path('app_categories') }}" class="{% if app.request.attributes.get('_route') == 'app_categories' %}active{% endif %}">
        üîç<br>Explorer
    </a>
</footer>
{% endblock %}
