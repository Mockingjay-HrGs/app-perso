{% extends 'base.html.twig' %}

{% block title %}Cat√©gories{% endblock %}

{% block body %}
<style>
    .category-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(180px, 1fr));
        gap: 1.5rem;
        padding: 2rem;
    }

    .category-card {
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 2rem;
        background: linear-gradient(135deg, #fdfbfb, #ebedee);
        border-radius: 15px;
        text-decoration: none;
        color: #333;
        font-weight: bold;
        font-size: 1.1rem;
        box-shadow: 0 4px 10px rgba(0,0,0,0.1);
        transition: transform 0.2s, box-shadow 0.2s;
        text-align: center;
    }

    .category-card:hover {
        transform: scale(1.05);
        box-shadow: 0 6px 14px rgba(0,0,0,0.15);
    }

    h1 {
        text-align: center;
        margin-top: 2rem;
        font-size: 2rem;
        color: #222;
    }

    .bottom-nav {
        position: fixed;
        bottom: 0;
        width: 100%;
        background-color: #fff;
        border-top: 1px solid #ccc;
        display: flex;
        justify-content: space-around;
        padding: 0.5rem 0;
        font-size: 0.9rem;
        z-index: 999;
    }

    .bottom-nav a {
        text-align: center;
        color: #666;
        text-decoration: none;
    }

    .bottom-nav a.active {
        color: #000;
        font-weight: bold;
    }

</style>

<h1>Explorer les cat√©gories d'√©v√©nements</h1>




<div class="category-grid">
    {% for category in categories %}
        <a href="{{ path('app_category_detail', { slug: category.slug }) }}" class="category-card">
            {{ category.name }}
        </a>
    {% endfor %}
</div>
<footer class="bottom-nav">
    <a href="{{ path('app_profile') }}" class="{% if app.request.attributes.get('_route') == 'app_profile' %}active{% endif %}">
        üë§<br>Profil
    </a>
    <a href="{{ path('app_categories') }}" class="{% if app.request.attributes.get('_route') == 'app_categories' %}active{% endif %}">
        üîç<br>Explorer
    </a>
</footer>

{% endblock %}
