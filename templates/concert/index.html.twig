{% extends 'base.html.twig' %}

{% block title %}Concert{% endblock %}

{% block body %}
    <style>
        body {
            margin: 0;
            font-family: sans-serif;
            background-color: #f5f5f5;
        }

        .banner {
            height: 200px;
            background-image: url('https://images.unsplash.com/photo-1507874457470-272b3c8d8ee2');
            background-size: cover;
            background-position: center;
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-size: 2rem;
            font-weight: bold;
            text-shadow: 1px 1px 5px black;
        }

        .event-list {
            padding: 1rem;
            display: flex;
            flex-direction: column;
            gap: 1.5rem;
        }

        .event-card {
            background-color: white;
            border-radius: 12px;
            padding: 1rem;
            box-shadow: 0 2px 8px rgba(0,0,0,0.1);
        }

        .event-image {
            background-color: #d9c7c7;
            border-radius: 8px;
            height: 120px;
            margin-bottom: 1rem;
            display: flex;
            align-items: center;
            justify-content: center;
            color: #333;
            font-size: 0.95rem;
            text-align: center;
        }

        .event-info {
            display: flex;
            justify-content: space-between;
            margin-bottom: 0.8rem;
            font-size: 0.95rem;
        }

        .event-buttons {
            display: flex;
            justify-content: space-around;
        }

        .event-buttons button {
            background-color: #eee;
            border: none;
            border-radius: 6px;
            padding: 0.4rem 1rem;
            font-size: 0.85rem;
            cursor: pointer;
        }

        .event-buttons button:hover {
            background-color: #ddd;
        }
    </style>

    <div class="banner">Concert</div>

    <div class="event-list">
        {% for i in 1..3 %}
            <div class="event-card">
                <div class="event-image">Photo ou poster de l’évènement</div>
                <div class="event-info">
                    <span>Date</span>
                    <span>Nom de l’évènement</span>
                </div>
                <div class="event-buttons">
                    <button>Maps</button>
                    <button>Détails</button>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}
