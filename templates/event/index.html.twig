{% extends 'base.html.twig' %}

{% block title %}{{ event.title }}{% endblock %}

{% block body %}
<style>
    body {
        background-color: #f2f4f8;
        font-family: 'Segoe UI', sans-serif;
        margin: 0;
        padding-bottom: 4rem;
    }

    .header {
        text-align: center;
        padding: 2rem 1rem 1rem;
        color: #2c3e50;
    }

    .header h1 {
        font-size: 2.2rem;
        margin-bottom: 0.5rem;
    }

    .poster {
        max-width: 100%;
        margin: 0 auto 1.5rem;
        display: flex;
        justify-content: center;
    }

    .poster img {
        width: 90%;
        max-width: 500px;
        border-radius: 12px;
        box-shadow: 0 4px 10px rgba(0,0,0,0.1);
    }

    .details {
        max-width: 800px;
        margin: 0 auto;
        padding: 0 1.5rem;
        font-size: 1rem;
        color: #34495e;
    }

    .details p {
        margin: 0.5rem 0;
    }

    .section {
        margin: 2rem auto;
        max-width: 800px;
        padding: 0 1.5rem;
    }

    .section h2 {
        font-size: 1.4rem;
        color: #2c3e50;
        margin-bottom: 0.5rem;
    }

    .tickets {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(160px, 1fr));
        gap: 1rem;
    }

    .ticket {
        background-color: #ffffff;
        padding: 1rem;
        border-radius: 10px;
        box-shadow: 0 2px 6px rgba(0,0,0,0.08);
        text-align: center;
        font-size: 0.95rem;
        color: #2c3e50;
    }

    .info-card {
        background-color: white;
        padding: 1rem;
        border-radius: 10px;
        margin-bottom: 1rem;
        box-shadow: 0 2px 6px rgba(0,0,0,0.05);
    }

    .bottom-nav {
        position: fixed;
        bottom: 0;
        width: 100%;
        background-color: #fff;
        border-top: 1px solid #ccc;
        display: flex;
        justify-content: space-around;
        padding: 0.5rem 0;
        font-size: 0.9rem;
        z-index: 999;
    }

    .bottom-nav a {
        text-align: center;
        color: #666;
        text-decoration: none;
    }

    .bottom-nav a.active {
        color: #000;
        font-weight: bold;
    }

    .back-button {
        display: inline-block;
        margin: 1rem;
        padding: 0.4rem 1rem;
        background-color: #ddd;
        color: #333;
        text-decoration: none;
        border-radius: 8px;
        font-weight: bold;
    }
</style>

<a href="{{ app.request.headers.get('referer') ?? path('app_categories') }}" class="back-button">‚Üê Retour</a>

<div class="header">
    <h1>{{ event.title }}</h1>
</div>

<div class="poster">
    {% if event.image %}
        <img src="{{ asset('uploads/' ~ event.image) }}" alt="Affiche de {{ event.title }}">
    {% endif %}
</div>

<div class="details">
    <p>üìç <strong>Lieu :</strong> {{ event.location }}</p>
    <p>üìÖ <strong>Date :</strong> {{ event.date|date('l d F Y √† H\hi') }}</p>
    <p>{{ event.description|nl2br }}</p>
</div>

<div class="section">
    <h2>üéüÔ∏è Billets disponibles</h2>
    {% if ticketTypes is empty %}
        <p>Aucun billet disponible pour cet √©v√©nement.</p>
    {% else %}
        <div class="tickets">
            {% for ticketType in ticketTypes %}
                <div class="ticket">
                    <strong>{{ ticketType.name }}</strong><br>
                    {{ ticketType.description }}<br>
                    <strong>{{ ticketType.price }} ‚Ç¨</strong><br>
                    <a href="{{ path('ticket_checkout', { eventSlug: event.slug, ticketTypeId: ticketType.id }) }}" class="btn btn-sm btn-primary mt-2">Acheter</a>
                </div>
            {% endfor %}
        </div>
    {% endif %}
</div>

<div class="section">
    <h2>‚ÑπÔ∏è Artiste</h2>
    <div class="info-card">
        DJ Snake
    </div>

    <h2>üìç Lieu</h2>
    <div class="info-card">
        Stade de France, 93200 Saint-Denis
    </div>

    <h2>üéµ Autres √©v√©nements √† venir</h2>
    <div class="info-card">
        12 juillet - 20h - Marseille<br>
        28 ao√ªt - 21h - Nice
    </div>
</div>

<footer class="bottom-nav">
    <a href="{{ path('app_profile') }}" class="{% if app.request.attributes.get('_route') == 'app_profile' %}active{% endif %}">
        üë§<br>Profil
    </a>
    <a href="{{ path('app_categories') }}" class="{% if app.request.attributes.get('_route') == 'app_categories' %}active{% endif %}">
        üîç<br>Explorer
    </a>
</footer>
{% endblock %}
