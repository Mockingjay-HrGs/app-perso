{% extends 'base.html.twig' %}

{% block title %}{{ event.title }}{% endblock %}

{% block body %}
    <style>
        .event-container {
            max-width: 800px;
            margin: 2rem auto;
            padding: 2rem;
            background: #f9f9f9;
            border-radius: 12px;
            box-shadow: 0 4px 10px rgba(0,0,0,0.05);
        }

        .event-title {
            font-size: 2rem;
            font-weight: bold;
            margin-bottom: 1rem;
        }

        .event-image {
            max-width: 100%;
            border-radius: 10px;
            margin-bottom: 1rem;
        }

        .event-info {
            font-size: 1.1rem;
            margin-bottom: 1rem;
        }

        .event-description {
            margin-top: 1rem;
            line-height: 1.6;
        }
    </style>

    <div class="event-container">
        <div class="event-title">{{ event.title }}</div>

        {% if event.image %}
            <img src="{{ asset('uploads/' ~ event.image) }}" alt="{{ event.title }}" class="event-image">
        {% endif %}

        <div class="event-info">
            üìç <strong>Lieu :</strong> {{ event.location }}<br>
            üìÖ <strong>Date :</strong> {{ event.date|date('d F Y √† H\hi') }}
        </div>

        <div class="event-description">
            {{ event.description|nl2br }}
        </div>
    </div>
{% endblock %}
