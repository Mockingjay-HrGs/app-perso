{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
<style>
    body {
        background: linear-gradient(135deg, #1f1c2c, #928DAB);
        min-height: 100vh;
        display: flex;
        justify-content: center;
        align-items: center;
        font-family: 'Segoe UI', sans-serif;
        color: #fff;
    }

    .glass-card {
        background: rgba(255, 255, 255, 0.1);
        border-radius: 15px;
        padding: 2rem;
        width: 100%;
        max-width: 400px;
        backdrop-filter: blur(12px);
        box-shadow: 0 8px 32px rgba(0, 0, 0, 0.2);
        border: 1px solid rgba(255, 255, 255, 0.2);
    }

    .glass-card h1 {
        text-align: center;
        margin-bottom: 1.5rem;
        font-size: 1.8rem;
    }

    label {
        display: block;
        margin-bottom: 0.3rem;
        font-size: 0.9rem;
        color: #f0f0f0;
    }

    .form-control,
    .form-check-input {
        background-color: rgba(255, 255, 255, 0.2);
        border: none;
        border-radius: 8px;
        padding: 0.7rem;
        width: 100%;
        color: white;
    }

    .form-control::placeholder {
        color: #ccc;
    }

    .form-check {
        margin-top: 1rem;
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

    .btn-submit {
        width: 100%;
        padding: 0.8rem;
        background: #00c6ff;
        border: none;
        color: white;
        font-weight: bold;
        border-radius: 8px;
        cursor: pointer;
        transition: background 0.3s ease;
        margin-top: 1rem;
    }

    .btn-submit:hover {
        background: #0072ff;
    }

    .alert {
        background-color: rgba(255, 0, 0, 0.2);
        color: #fff;
        padding: 0.8rem;
        margin-bottom: 1rem;
        border-radius: 8px;
        font-size: 0.9rem;
    }
</style>

<div class="glass-card">
    <h1>Inscription</h1>

    {% for flash_error in app.flashes('verify_email_error') %}
        <div class="alert" role="alert">{{ flash_error }}</div>
    {% endfor %}

    {{ form_start(registrationForm) }}

        <div class="form-group mb-3">
            {{ form_label(registrationForm.email, 'Adresse email') }}
            {{ form_widget(registrationForm.email, { 'attr': { 'class': 'form-control' } }) }}
            {{ form_errors(registrationForm.email) }}
        </div>

        <div class="form-group mb-3">
            {{ form_label(registrationForm.plainPassword, 'Mot de passe') }}
            {{ form_widget(registrationForm.plainPassword, { 'attr': { 'class': 'form-control' } }) }}
            {{ form_errors(registrationForm.plainPassword) }}
        </div>

        <div class="form-check mb-3">
            {{ form_widget(registrationForm.agreeTerms, { 'attr': { 'class': 'form-check-input' } }) }}
            {{ form_label(registrationForm.agreeTerms, 'Accepter les conditions', { 'label_attr': { 'class': 'form-check-label' } }) }}
            {{ form_errors(registrationForm.agreeTerms) }}
        </div>

        <button type="submit" class="btn-submit">S'inscrire</button>

    {{ form_end(registrationForm) }}
</div>
{% endblock %}
