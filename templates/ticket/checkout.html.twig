{% extends 'base.html.twig' %}

{% block title %}Achat de billet{% endblock %}

{% block body %}
    <div style="max-width: 600px; margin: auto; padding: 2rem;">
        <h1>{{ event.title }}</h1>

        <div style="margin: 1rem 0; background: #f5f5f5; padding: 1rem; border-radius: 10px;">
            <h2>Billet : {{ ticketType.name }}</h2>
            <p><strong>Prix :</strong> {{ ticketType.price }} €</p>
            <p><strong>Description :</strong> {{ ticketType.description }}</p>
        </div>

        <form method="post" action="#">
            {# Ce bouton sera remplacé par l'intégration CB / PayPal plus tard #}
            <button type="submit" class="btn btn-primary">
                Payer maintenant
            </button>
        </form>

        <a href="{{ path('event_show', { slug: event.slug }) }}" style="display: inline-block; margin-top: 1rem;">
            ← Retour à l'événement
        </a>
    </div>
{% endblock %}
