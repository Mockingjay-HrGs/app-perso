{% extends 'base.html.twig' %}

{% block title %}Mon profil - Mes billets{% endblock %}

{% block body %}
<style>
    body {
            background: linear-gradient(145deg, #1e1e2f, #3a3a5d);
            font-family: 'Segoe UI', sans-serif;
            color: #fff;
            margin: 0;
            padding-bottom: 4rem;
        }

    h1 {
        text-align: center;
        margin-bottom: 2rem;
    }

    .tickets-container {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
        gap: 0.7rem;
    }

    .ticket-card {
        background: rgba(255, 255, 255, 0.06);
        border: 1px solid rgba(255, 255, 255, 0.15);
        border-radius: 12px;
        padding: 1.2rem;
        text-align: center;
        transition: transform 0.2s ease;
        margin-right: 1rem;
        margin-left: 1rem;

    }

    .ticket-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 6px 16px rgba(0, 0, 0, 0.3);
    }

    .ticket-card strong {
        display: block;
        font-size: 1.2rem;
        margin-bottom: 0.5rem;
    }

    .status {
        display: inline-block;
        margin: 0.5rem 0;
        padding: 0.3rem 0.8rem;
        border-radius: 20px;
        font-size: 0.9rem;
        text-transform: uppercase;
    }

    .status-pay√© {
        background: #4caf50;
        color: #fff;
    }

    .status-disponible {
        background: #2196f3;
        color: #fff;
    }

    .status-annul√© {
        background: #f44336;
        color: #fff;
    }

    .ticket-code {
        font-family: monospace;
        background: #000;
        color: #0f0;
        padding: 0.2rem 0.5rem;
        border-radius: 4px;
    }

    .btn-primary {
        display: inline-block;
        margin-top: 0.8rem;
        background: #5f66ff;
        padding: 0.4rem 1rem;
        border-radius: 8px;
        color: white;
        text-decoration: none;
        font-weight: bold;
        transition: background 0.3s ease;
    }

    .btn-primary:hover {
        background: #4a4efc;
    }

    .btn-cancel {
        display: inline-block;
        margin-top: 0.8rem;
        background: #f44336;
        padding: 0.4rem 1rem;
        border-radius: 8px;
        color: white;
        text-decoration: none;
        font-weight: bold;
        transition: background 0.3s ease;
    }

    .btn-cancel:hover {
        background: #d32f2f;
    }

    .bottom-nav {
            position: fixed;
            bottom: 0;
            width: 100%;
            background-color: #111;
            border-top: 1px solid #333;
            display: flex;
            justify-content: space-around;
            padding: 0.6rem 0;
            font-size: 0.9rem;
            z-index: 999;
        }

        .bottom-nav a {
            text-align: center;
            color: #aaa;
            text-decoration: none;
        }

        .bottom-nav a.active {
            color: #fff;
            font-weight: bold;
        }

    #ticketModal {
        display: none;
        position: fixed;
        top: 0; left: 0; right: 0; bottom: 0;
        background: rgba(0,0,0,0.8);
        justify-content: center;
        align-items: center;
        z-index: 2000;
    }

    .modal-content {
        background: #fff;
        color: #000;
        padding: 2rem;
        border-radius: 12px;
        text-align: center;
        max-width: 400px;
    }

    .qr-code {
        margin-top: 1rem;
        border: 4px solid #000;
        border-radius: 10px;
    }

</style>

<h1>üéüÔ∏è Mes Billets</h1>

{% if tickets|length == 0 %}
    <p style="text-align: center;">Vous n'avez pas encore de billet.</p>
{% else %}
    <div class="tickets-container">
        {% for ticket in tickets %}
            <div class="ticket-card">
                <strong>{{ ticket.ticketType.name }}</strong>
                <p>√âv√©nement : {{ ticket.event.title }}</p>
                <p>Prix : {{ ticket.ticketType.price }} ‚Ç¨</p>

                <span class="status status-{{ ticket.status|lower }}">
                    {{ ticket.status|capitalize }}
                </span>

                <p>Code : <span class="ticket-code">{{ ticket.code }}</span></p>

                <button class="btn-primary" onclick="openModal('{{ ticket.code|e('js') }}')">
                    Voir le billet
                </button>

                {% if ticket.status == 'pay√©' %}
                    <a href="{{ path('app_ticket_delete', { id: ticket.id }) }}" class="btn-cancel">Annuler</a>
                {% endif %}
            </div>
        {% endfor %}
    </div>
{% endif %}

<div id="ticketModal">
    <div class="modal-content">
        <h2>Votre billet</h2>
        <canvas id="modalQrCanvas"></canvas>
        <p style="margin-top:1rem;">Code : <span id="modalTicketCode" style="font-family: monospace; font-weight:bold;"></span></p>
        <button onclick="closeModal()" style="margin-top:1rem;">Fermer</button>
    </div>
</div>

<footer class="bottom-nav">
    <a href="{{ path('app_profile') }}" class="{% if app.request.attributes.get('_route') == 'app_profile' %}active{% endif %}">
        üë§<br>Profil
    </a>
    <a href="{{ path('app_categories') }}" class="{% if app.request.attributes.get('_route') == 'app_categories' %}active{% endif %}">
        üîç<br>Explorer
    </a>
{% if is_granted('ROLE_ADMIN') %}
    <a href="{{ path('admin') }}" class="{% if app.request.attributes.get('_route') == 'admin' %}active{% endif %}">
        üî®<br>Admin
    </a>
{% endif %}
</footer>

<script src="https://cdn.jsdelivr.net/npm/qrious/dist/qrious.min.js"></script>
<script>
    document.addEventListener('DOMContentLoaded', () => {
        closeModal();
    });

    function openModal(code) {
        if (!code || code === 'undefined') {
            closeModal();
            return;
        }

        new QRious({
            element: document.getElementById('modalQrCanvas'),
            size: 200,
            value: code
        });

        document.getElementById('modalTicketCode').innerText = code;
        document.getElementById('ticketModal').style.display = 'flex';
    }

    function closeModal() {
        document.getElementById('ticketModal').style.display = 'none';
    }
</script>


{% endblock %}
